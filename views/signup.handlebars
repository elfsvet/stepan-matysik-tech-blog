{{!-- sing up form --}}
<form id="signup-form" class="container-fluid">

  <h3 class="text-center">Sing Up</h3>

  <div class="mb-3">
    <label class="form-label" for="username-signup">Username:</label>
    <input class="form-control" type="text" id="username-signup" />
  </div>

  <div class="mb-3">
    <label class="form-label" for="email-signup">Email address:</label>
    <input class="form-control" type="email" id="email-signup" />
  </div>

  <div class="mb-3">
    <label class="form-label" for="password-signup">Password:</label>
    <input class="form-control" type="password" id="password-signup" />
  </div>

  <div class="mb-3">
    <div class="container-fluid">
      <div class="row">
        <button type="submit" class="btn btn-primary">Sign up</button>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <a href="/login" class="btn btn-secondary">Login</a>
  </div>

</form>



{{!-- Remember to give the absolute path, not the relative file path. --}}
<script src="/javascript/signup.js"></script>